{% extends 'MainBundle::layout.html.twig' %}

{% block body -%}
    <h1>Document list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Filename</th>
                <th>Extension</th>
                <th>Size (octets)</th>
                <th>Owner</th>
                <th>Date</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('document_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td><a href="{{ asset(entity.webPath) }}" target="_blank">{{ entity.filename }}</a></td>
                <td>{{ entity.extension }}</td>
                <td>{{ entity.size }}</td>
                <td>{{ entity.owner }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.description }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('document_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('document_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('document_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
