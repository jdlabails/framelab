{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% stylesheets
        '@MainBundle/Resources/public/css/bootstrap.css'
        '@MainBundle/Resources/public/css/bootstrap-theme.css'
        '@MainBundle/Resources/public/css/jquery.dataTables.min.css'
        '@MainBundle/Resources/public/css/jquery-ui.min.css'
        '@MainBundle/Resources/public/css/main.css'
    %}
    <link href="{{asset_url}}" type="text/css" rel="stylesheet"/>
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {% javascripts
        '@MainBundle/Resources/public/js/jquery-1.9.1.min.js'
        '@MainBundle/Resources/public/js/bootstrap.min.js'
        '@MainBundle/Resources/public/js/jquery.dataTables.min.js'
        '@MainBundle/Resources/public/js/jquery.dataTables.configDefault.js'
        '@MainBundle/Resources/public/js/jquery-ui.min.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script>
        $(document).ready(function () {
            $('.records_list').DataTable();
        });
    </script>
{% endblock %}

