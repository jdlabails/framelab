                        <a class="navbar-form navbar-right" href="{{path('fos_user_security_logout')}}">
                            <span class="glyphicon glyphicon-log-out" aria-hidden="true" title="Logout"></span>
                        </a>
                    {% else %}
                        <a class="navbar-form navbar-right" href="{{path('fos_user_security_login')}}">
                            <span class="glyphicon glyphicon-log-in" aria-hidden="true" title="Login"></span>
                        </a>
